<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/idnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="#1"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title_ls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
            android:id="@+id/year_ls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:textSize="15dp"
            android:text=""
            android:textColor="@android:color/black"/>

    <TextView
            android:id="@+id/director_ls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text=""
            android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/rating_ls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text=""
        android:textColor="@android:color/black"/>

    <TextView
            android:id="@+id/genre_ls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text=""
            android:textColor="@android:color/holo_blue_light"/>



    <TextView
            android:id="@+id/star_ls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text=""
            android:textColor="@android:color/holo_green_light"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/material_blue_grey_800"></View>



</LinearLayout>
